{
    "name": "elkulo/feeder",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "https://github.com/elkulo/Feeder",
    "type": "library",
    "license": "LGPL-2.1-only",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0 || ^8.1 || ^8.2",
        "ext-json": "*",
        "filp/whoops": "^2.14",
        "mibe/feedwriter": "^1.1",
        "middlewares/whoops": "^2.0",
        "monolog/monolog": "^2.8",
        "php-di/php-di": "^6.4",
        "simplepie/simplepie": "^1.7",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "slim/twig-view": "^3.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "ccampbell/chromephp": "^4.1",
        "jangregor/phpstan-prophecy": "^0.8.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpmd/phpmd": "^2.13",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.100",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.0"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "helpers/console.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "init-config": [
            "@composer dump-autoload",
            "phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility"
        ],
        "post-install-cmd": "@init-config",
        "post-update-cmd": "@init-config",
        "test": "phpunit",
        "test-version": [
            "phpcs -p --colors --report-width=120 --standard=PHPCompatibility --ignore=*/vendor/* --extensions=php ./ --runtime-set testVersion 8.2-",
            "phpcs -p --colors --report-width=120 --standard=PHPCompatibility --ignore=*/vendor/* --extensions=php ./ --runtime-set testVersion 8.1-",
            "phpcs -p --colors --report-width=120 --standard=PHPCompatibility --ignore=*/vendor/* --extensions=php ./ --runtime-set testVersion 8.0-"
        ],
        "phpcs": "phpcs -p --colors --report-width=120 --standard=PSR2 --ignore=*/vendor/* --extensions=php app/ src/ helpers/",
        "phpcbf": "phpcbf -p --standard=PSR2 --ignore=*/vendor/* --extensions=php app/ src/ helpers/",
        "phpmd": "phpmd src text design,unusedcode",
        "phpstan": "phpstan analyse --memory-limit 1G",
        "analyse": [
            "@composer phpstan",
            "@composer phpcs",
            "@composer test-version"
        ],
        "format": [
            "@composer phpcbf",
            "@composer phpmd"
        ]
    }
}
