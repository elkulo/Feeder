{# BootstrapのToastアラート #}

<template id="__toast" v-if="state.toast.display">
  <div
    class="toast position-fixed top-0 end-0 m-2 show bg-danger"
    style="z-index:1100"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >
    <div class="toast-header">
      <div class="spinner-grow text-danger spinner-grow-sm" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <strong class="d-inline-block me-auto px-2 text-danger" v-html="state.toast.title"></strong>
      <span class="text-secondary" v-html="state.toast.latest"></span>
      <button type="button" class="btn-close" v-on:click="chengeToastDisplay(false)"></button>
    </div>
    <div class="toast-body bg-gradient text-white rounded-bottom" v-html="state.toast.content"></div>
  </div>
</template>