{% extends 'templates/layout.twig' %}
{% block content %}

<div class="site">

<div class="container-fluid">
<div class="row">

<div class="col-md-3 d-block bg-dark sidebar collapse">
	<header class="site-header">

		<div class="site-header__heroe">

			<h1>Feeder</h1>
			<p>
				<span data-clock-days></span><br />
				<span data-clock-times></span>
			</p>

		</div>
	</header>
</div>

<div class="col-md-9 ms-sm-auto px-md-5 pt-md-3 bg-light">
	<main id="app" class="site-section">

		<nav class="site-navigation">
    		<ul class="site-navigation__tabs">
       			<li
				   class="site-navigation__tabs__item"
				   v-for="site in feeds.data"
				   v-on:click="change(site.id)"
				   v-bind:class="{'active': isActive === site.id}"
				   :key="site.id"
				>
				   ${site.name}
				</li>
  			</ul>
		</nav>

		<template
			v-for="site in feeds.data"
			v-if="isActive == site.id"
			:key="site.id"
		>
			<div class="site-section__header">
				<h2 class="site-section__header__title">
					${site.id}. ${site.name}
				</h2>
			</div>

			<section
				v-for="(single, index) in site.feeder"
				class="entry-section entry-section--${index}"
			   :key="index"
			>
				<header class="entry-section__header">
					<h3>
						<a href="${single.link}" title="${single.title}" target="_blank">${single.title}</a>
					</h3>
					<p>${single.date}</p>
				</header>
				<div class="entry-section__content">
					<p>${single.content}</p>
				</div>
				<footer>
					<p>â†’ <a href="${single.link}" title="${single.title}" target="_blank">${single.link}</a></p>
				</footer>
			</section>
		</template>

	</main>

	<footer class="site-footer">

		<div class="site-footer__copyrights">

			<p>&copy; Feeder | el.kulo</p>

		</div>

	</footer>
</div>

</div>
</div>

{% endblock %}